{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "desktop",
  "local": true,
  "windows": [
    "main"
  ],
  "permissions": [
    "fs:allow-appdata-read-recursive",
    "fs:allow-appdata-write-recursive",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$APPDATA/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/*"
        },
        {
          "path": "$APPDATA/**"
        }
      ]
    }
  ]
}